# Copy this file to .env and fill in sensible values before running
# MongoDB connection string (required)
MONGODB_URI=mongodb://localhost:27017/student-assistant

# JWT secrets (required)
JWT_SECRET=replace-with-a-secure-secret
ACCESS_TOKEN_SECRET=replace-with-a-secure-secret
REFRESH_TOKEN_SECRET=replace-with-a-secure-secret

# Token expiry overrides (optional)
# Format examples: 15m, 7d
ACCESS_EXPIRES=15m
REFRESH_EXPIRES=7d

# App environment
NODE_ENV=development
PORT=5000
